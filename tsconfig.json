{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "outDir": "./build",
    "rootDir": "./src",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "babel.config.ts",
    "config-overrides.ts"
  ]
}